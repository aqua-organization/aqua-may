{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",

	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},

	"files": {
		"includes": ["apps/**/src", "packages/**/src"],
		"ignoreUnknown": true
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"formatWithErrors": true
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useConst": "error",
				"noParameterAssign": "error",
				"noUselessElse": "error",
				"useSingleVarDeclarator": "error",
				"useDefaultParameterLast": "error",
				"noInferrableTypes": "error"
			},
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noConsole": "off"
			},
			"a11y": {
				"noRedundantRoles": "info"
			}
		}
	},

	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	}
}
