{
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true
      }
   },
   "formatter": {
      "lineWidth": 120,
      "indentStyle": "space",
      "indentWidth": 3
   },
   "files": {
      "includes": [
         "apps/**/*.{ts,tsx,js,jsx,json}",
         "packages/**/*.{ts,tsx,js,jsx,json}",
         "turbo/**/*.{ts,tsx,js,jsx,json}",
         "*.{ts,tsx,js,jsx,json}"
      ],
      "ignoreUnknown": true
   }
}
